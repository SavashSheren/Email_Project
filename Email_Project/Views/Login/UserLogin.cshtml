@model Email_Project.Dtos.UserLoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserLogin</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up | Control Center</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #0c0c0e;
            font-family: 'Inter', sans-serif;
        }

        .glass-effect {
            background: rgba(20, 20, 22, 0.8);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .custom-input {
            background: rgba(30, 30, 35, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

            .custom-input:focus {
                border-color: #3b82f6;
                box-shadow: 0 0 15px rgba(59, 130, 246, 0.15);
                background: rgba(40, 40, 45, 0.8);
            }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-6">

    <div class="glass-effect w-full max-w-[480px] rounded-[3rem] p-12 shadow-[0_20px_50px_rgba(0,0,0,0.5)]">

        <div class="text-center mb-10">
            <div class="size-14 bg-gradient-to-br from-blue-600 to-indigo-700 rounded-2xl mx-auto flex items-center justify-center shadow-xl shadow-blue-900/20 mb-6">
                <span class="material-symbols-outlined text-white text-3xl">person_add</span>
            </div>
            <h2 class="text-white text-3xl font-black tracking-tight">Sign In</h2>
            <p class="text-slate-500 text-sm mt-3 font-medium">Enter your details to access the system.</p>
        </div>

        <form method="post" class="space-y-6">     

            <div class="space-y-2">
                <label class="text-slate-400 text-[10px] font-black uppercase tracking-widest ml-1">Username</label>
                <input type="text" asp-for="Username" class="custom-input w-full rounded-2xl px-5 py-3.5 text-white text-sm focus:outline-none" placeholder="username" />
            </div>    

            <div class="space-y-2">
                <label class="text-slate-400 text-[10px] font-black uppercase tracking-widest ml-1">Password</label>
                <input type="password" asp-for="Password" class="custom-input w-full rounded-2xl px-5 py-3.5 text-white text-sm focus:outline-none" placeholder="••••••••" />
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"> </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-black py-6 rounded-[2rem] text-lg shadow-[0_20px_40px_rgba(37,99,235,0.3)] transition-all active:scale-[0.95] mt-8 flex items-center justify-center gap-3 group">
              Login 
                <span class="material-symbols-outlined text-xl group-hover:translate-x-2 transition-transform">arrow_forward</span>
            </button>
        </form>

        <div class="mt-10 pt-8 border-t border-slate-800/50 text-center">
            <p class="text-slate-500 text-xs font-medium">
                Don't have an account?
                <a href="/Register/CreateUser" class="text-blue-500 hover:text-blue-400 font-black ml-1 transition-colors">Create Account</a>
            </p>
        </div>
    </div> 

</body>
</html>
